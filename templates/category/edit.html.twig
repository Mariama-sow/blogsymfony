{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie - {{ category.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-edit"></i>
                Modifier la catégorie
            </h1>
            <div class="breadcrumb">
                <a href="{{ path('app_category_index') }}" class="breadcrumb-link">
                    <i class="fas fa-tags"></i>
                    Catégories
                </a>
                <span class="breadcrumb-separator">
                    <i class="fas fa-chevron-right"></i>
                </span>
                <span class="breadcrumb-current">{{ category.name }}</span>
            </div>
        </div>
    </div>

    <div class="edit-container">
        <div class="edit-form">
            <div class="card">
                <div class="card-header">
                    <h2>
                        <i class="fas fa-pencil-alt"></i>
                        Informations de la catégorie
                    </h2>
                </div>
                <div class="card-body">
                    {{ include('category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
        </div>

        <div class="edit-sidebar">
            <!-- Actions rapides -->
            <div class="card">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-cogs"></i>
                        Actions
                    </h3>
                </div>
                <div class="card-body">
                    <div class="action-buttons">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye"></i>
                            Voir
                        </a>
                        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Retour à la liste
                        </a>
                    </div>
                </div>
            </div>

            <!-- Zone de danger -->
            <div class="card danger-zone">
                <div class="card-header">
                    <h3>
                        <i class="fas fa-exclamation-triangle"></i>
                        Zone de danger
                    </h3>
                </div>
                <div class="card-body">
                    <p class="danger-text">
                        Une fois supprimée, cette catégorie ne pourra pas être récupérée.
                    </p>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        margin-bottom: 30px;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: flex;
        align-items: center;
        gap: 15px;
        margin: 0;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .breadcrumb-link {
        color: #4ecdc4;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: all 0.3s ease;
    }

    .breadcrumb-link:hover {
        opacity: 1;
        transform: translateX(-2px);
    }

    .breadcrumb-separator {
        opacity: 0.5;
    }

    .breadcrumb-current {
        font-weight: 600;
    }

    .edit-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
    }

    .edit-form .card {
        margin-bottom: 0;
    }

    .card-header {
        background: linear-gradient(45deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px 30px;
        border-radius: 20px 20px 0 0;
    }

    .card-header h2,
    .card-header h3 {
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .card-body {
        padding: 30px;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .btn-info {
        background: linear-gradient(45deg, #45b7d1, #96ceb4);
    }

    .btn-secondary {
        background: linear-gradient(45deg, #6c757d, #8d9db6);
    }

    .danger-zone {
        border: 1px solid rgba(220, 53, 69, 0.3);
    }

    .danger-zone .card-header {
        background: linear-gradient(45deg, rgba(220, 53, 69, 0.1), rgba(255, 107, 107, 0.1));
        border-bottom-color: rgba(220, 53, 69, 0.2);
    }

    .danger-text {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        margin-bottom: 15px;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .edit-container {
            grid-template-columns: 1fr;
        }
        
        .header-content {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .page-title {
            font-size: 2rem;
        }
    }
</style>
{% endblock %}